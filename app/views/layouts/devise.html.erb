<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Mini Social Network</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag 'devise', media: 'all' %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <div class="container">
      <%= yield %>
    </div>

    <%= javascript_include_tag 'devise' %>

    <script>
      $(function(){
        var notice = "<%= flash[:notice] %>"
        $.notify(notice, "success" );

        var alert = "<%= flash[:alert] %>"
        $.notify(alert, "error" );
       });
    </script>
  </body>
</html>
