<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <h2>Acessar a sua conta</h2>

  <%= f.input :email %>

  <%= f.input :password %>

  <%= f.submit 'Logar', class: 'btn btn-success' %>

  <p><%= link_to "Cadastre-se", new_user_registration_path %></p>
<% end %>
